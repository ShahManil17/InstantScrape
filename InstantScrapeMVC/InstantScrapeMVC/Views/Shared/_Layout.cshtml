<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InstantScrapeMVC</title>
    <link rel="icon" type="image/png" href="~/favicon.png?v=4" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.jpg" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InstantScrapeMVC.styles.css" asp-append-version="true" />

    <style>
        /* Footer fixed to bottom-left without adding any privacy links */
        .footer-fixed {
            position: fixed;
            left: 16px;
            bottom: 12px;
            z-index: 1050;
            background: transparent;
            margin: 0;
            padding: 0;
        }

        .footer-fixed .container {
            padding: 0;
            color: #ffffff;
            font-weight: 600;
            font-size: 0.95rem;
        }

        /* Ensure main content does not get hidden behind the fixed footer */
        main[role="main"] {
            padding-bottom: 48px; /* room for the footer */
        }

        @@media (max-width: 576px) {
            .footer-fixed {
                left: 12px;
                bottom: 8px;
            }

            .footer-fixed .container {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>