@{
    ViewData["Title"] = "InstantScrape - Web Scraping Tool";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <meta name="description" content="Instantly scrape and discover the best businesses in any category and location with our powerful web scraping tool.">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- SheetJS for Excel Export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --dark-bg: #0f0f23;
            --card-bg: rgba(255, 255, 255, 0.05);
            --card-border: rgba(255, 255, 255, 0.1);
            --text-primary: #ffffff;
            --text-secondary: #a0aec0;
            --text-muted: #718096;
            --input-bg: rgba(255, 255, 255, 0.08);
            --input-border: rgba(255, 255, 255, 0.15);
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.1);
            --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.2);
            --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.3);
            --shadow-glow: 0 0 40px rgba(102, 126, 234, 0.3);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--dark-bg);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
        }

        /* Animated Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 50%, rgba(102, 126, 234, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(118, 75, 162, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(75, 108, 254, 0.1) 0%, transparent 50%);
            z-index: -1;
            animation: gradientShift 15s ease infinite;
        }

        @@keyframes gradientShift {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        /* Header Section */
        .header {
            text-align: center;
            margin-bottom: 60px;
            animation: fadeInDown 0.8s ease;
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .header h1 {
            font-family: 'Outfit', sans-serif;
            font-size: 3.5rem;
            font-weight: 800;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 16px;
            letter-spacing: -1px;
        }

        .header p {
            font-size: 1.25rem;
            color: var(--text-secondary);
            font-weight: 400;
        }

        /* Search Card */
        .search-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 24px;
            padding: 48px;
            margin-bottom: 40px;
            box-shadow: var(--shadow-lg);
            animation: fadeInUp 0.8s ease 0.2s both;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* keep the 3-column layout, center items vertically so button sits inline with inputs */
        .search-form {
            display: grid;
            grid-template-columns: 1fr 1fr auto;
            gap: 20px;
            align-items: end; /* Align to bottom so button matches inputs */
        }

        /* Force label above input and keep consistent spacing */
        .input-group {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .input-group label {
            display: block;
            font-size: 0.95rem; /* visible size */
            font-weight: 700;   /* clear weight */
            color: var(--text-primary); /* high contrast for readability */
            opacity: 0.9;
            margin-bottom: 8px; /* spacing between label and input */
            text-transform: uppercase;
            letter-spacing: 0.6px;
        }

        .input-wrapper {
            position: relative;
            width: 100%;
        }

        .input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1.1rem;
            pointer-events: none;
            transition: color 0.3s ease;
        }

        .search-input {
            width: 100%;
            padding: 16px 20px 16px 52px;
            background: var(--input-bg);
            border: 2px solid var(--input-border);
            border-radius: 12px;
            color: var(--text-primary);
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
            outline: none;
        }

        .search-input::placeholder {
            color: var(--text-muted);
        }

        .search-input:focus {
            background: rgba(255, 255, 255, 0.1);
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

        .input-wrapper:focus-within .input-icon {
            color: #667eea;
        }

        /* ensure the button grid cell centers its content (button) */
        /* ensure the button grid cell centers its content (button) */
        .search-form .btn {
            align-self: end;
            margin-bottom: 2px; /* Slight adjustment for input borders */
        }

        .btn {
            padding: 16px 40px;
            font-size: 1rem;
            font-weight: 600;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            font-family: 'Inter', sans-serif;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn-primary {
            background: var(--primary-gradient);
            color: white;
            box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 24px rgba(102, 126, 234, 0.5);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        .btn-success {
            background: var(--success-gradient);
            color: white;
            box-shadow: 0 4px 16px rgba(79, 172, 254, 0.4);
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 24px rgba(79, 172, 254, 0.5);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
        }

        /* Loading Spinner */
        .spinner {
            display: inline-block;
            width: 18px;
            height: 18px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Results Section */
        .results-section {
            display: none;
            animation: fadeInUp 0.8s ease;
        }

        .results-section.active {
            display: block;
        }

        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            flex-wrap: wrap;
            gap: 16px;
        }

        .results-title {
            font-family: 'Outfit', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
        }

        .results-count {
            display: inline-block;
            padding: 8px 16px;
            background: rgba(102, 126, 234, 0.2);
            border: 1px solid rgba(102, 126, 234, 0.3);
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            color: #667eea;
            margin-left: 12px;
        }

        /* Table Container */
        .table-container {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 24px;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
        }

        .table-wrapper {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: rgba(102, 126, 234, 0.1);
            border-bottom: 2px solid rgba(102, 126, 234, 0.3);
        }

        th {
            padding: 20px 24px;
            text-align: left;
            font-size: 0.875rem;
            font-weight: 700;
            color: var(--text-primary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            white-space: nowrap;
        }

        tbody tr {
            border-bottom: 1px solid var(--card-border);
            transition: all 0.3s ease;
        }

        tbody tr:hover {
            background: rgba(102, 126, 234, 0.05);
        }

        tbody tr:last-child {
            border-bottom: none;
        }

        td {
            padding: 20px 24px;
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

        .business-name {
            font-weight: 600;
            color: var(--text-primary);
            font-size: 1.05rem;
        }

        .rating-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            background: rgba(251, 191, 36, 0.15);
            border: 1px solid rgba(251, 191, 36, 0.3);
            border-radius: 8px;
            color: #fbbf24;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .reviews-count {
            color: var(--text-muted);
            font-size: 0.875rem;
        }

        .address-text {
            max-width: 300px;
            line-height: 1.5;
        }

        .description-text {
            max-width: 400px;
            line-height: 1.6;
            color: var(--text-muted);
        }

        .url-link {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .url-link:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: var(--text-muted);
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.3;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            color: var(--text-secondary);
            margin-bottom: 8px;
        }

        /* Error Message */
        .error-message {
            background: rgba(245, 87, 108, 0.1);
            border: 1px solid rgba(245, 87, 108, 0.3);
            border-radius: 12px;
            padding: 16px 20px;
            color: #f5576c;
            margin-top: 20px;
            display: none;
            align-items: center;
            gap: 12px;
        }

        .error-message.active {
            display: flex;
        }

        .error-message i {
            font-size: 1.25rem;
        }

        /* Responsive Design */
        @@media (max-width: 1024px) {
            .search-form {
                grid-template-columns: 1fr;
                align-items: start; /* stack layout: labels above inputs, button below */
            }

            .header h1 {
                font-size: 2.5rem;
            }

            .search-card {
                padding: 32px;
            }
        }

        @@media (max-width: 768px) {
            .container {
                padding: 20px 16px;
            }

            .header h1 {
                font-size: 2rem;
            }

            .header p {
                font-size: 1rem;
            }

            .search-card {
                padding: 24px;
            }

            .results-header {
                flex-direction: column;
                align-items: flex-start;
            }

            th, td {
                padding: 16px;
                font-size: 0.875rem;
            }

            .address-text,
            .description-text {
                max-width: 200px;
            }
        }

        /* Scroll Animation */
        .fade-in {
            animation: fadeIn 0.6s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        /* Footer */
        .footer {
            text-align: center;
            padding: 40px 20px;
            margin-top: auto; /* Push to bottom if content is short */
            color: var(--text-secondary);
            font-size: 0.95rem;
            position: relative;
            z-index: 10;
        }

        .footer-content {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px 24px;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 50px;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .footer-content:hover {
            background: rgba(255, 255, 255, 0.08);
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            border-color: rgba(255, 255, 255, 0.1);
        }

        .heart-icon {
            color: #f5576c;
            font-size: 1rem;
            animation: heartbeat 1.5s ease-in-out infinite;
        }

        .credit-text {
            font-weight: 500;
        }

        .credit-name {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 700;
            position: relative;
        }

        @@keyframes heartbeat {
            0%, 100% { transform: scale(1); }
            15% { transform: scale(1.3); }
            30% { transform: scale(1); }
            45% { transform: scale(1.3); }
            60% { transform: scale(1); }
        }

        /* Ensure footer doesn't overlap on small screens */
        @@media (max-width: 768px) {
            .footer {
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1><i class="fas fa-search-location"></i> InstantScrape</h1>
            <p>Discover the best businesses in any category and location instantly</p>
        </div>

        <!-- Search Card -->
        <div class="search-card">
            <form id="searchForm" class="search-form">
                <div class="input-group">
                    <label for="categoryInput">Category</label>
                    <div class="input-wrapper">
                        <i class="fas fa-tag input-icon"></i>
                        <input 
                            type="text" 
                            id="categoryInput" 
                            class="search-input" 
                            placeholder="e.g., Restaurants, Hotels, Gyms"
                            required
                        >
                    </div>
                </div>

                <div class="input-group">
                    <label for="placeInput">Location</label>
                    <div class="input-wrapper">
                        <i class="fas fa-map-marker-alt input-icon"></i>
                        <input 
                            type="text" 
                            id="placeInput" 
                            class="search-input" 
                            placeholder="e.g., New York, London, Tokyo"
                            required
                        >
                    </div>
                </div>

                <button type="submit" id="searchBtn" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                    <span>Search</span>
                </button>
            </form>

            <div id="errorMessage" class="error-message">
                <i class="fas fa-exclamation-circle"></i>
                <span id="errorText"></span>
            </div>
        </div>

        <!-- Results Section -->
        <div id="resultsSection" class="results-section">
            <div class="results-header">
                <div>
                    <h2 class="results-title">
                        Search Results
                        <span id="resultsCount" class="results-count">0 results</span>
                    </h2>
                </div>
                <button id="downloadBtn" class="btn btn-success">
                    <i class="fas fa-download"></i>
                    <span>Download Excel</span>
                </button>
            </div>

            <div class="table-container">
                <div class="table-wrapper">
                    <table id="resultsTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Business Name</th>
                                <th>Rating</th>
                                <th>Reviews</th>
                                <th>Address</th>
                                <th>Description</th>
                                <th>Website</th>
                            </tr>
                        </thead>
                        <tbody id="resultsBody">
                            <!-- Results will be inserted here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <span class="credit-text">Designed & Developed with</span>
            <i class="fas fa-heart heart-icon"></i>
            <span class="credit-text">by <span class="credit-name">Manil Shah</span></span>
        </div>
    </footer>

    <script>
        let scrapedData = [];
        let currentCategory = '';
        let currentPlace = '';

        const searchForm = document.getElementById('searchForm');
        const searchBtn = document.getElementById('searchBtn');
        const categoryInput = document.getElementById('categoryInput');
        const placeInput = document.getElementById('placeInput');
        const resultsSection = document.getElementById('resultsSection');
        const resultsBody = document.getElementById('resultsBody');
        const resultsCount = document.getElementById('resultsCount');
        const downloadBtn = document.getElementById('downloadBtn');
        const errorMessage = document.getElementById('errorMessage');
        const errorText = document.getElementById('errorText');

        // Handle form submission
        searchForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const category = categoryInput.value.trim();
            const place = placeInput.value.trim();

            if (!category || !place) {
                showError('Please enter both category and location');
                return;
            }

            currentCategory = category;
            currentPlace = place;

            await performSearch(category, place);
        });

        // Perform search
        async function performSearch(category, place) {
            // Hide error message
            hideError();

            // Update button state
            searchBtn.disabled = true;
            searchBtn.innerHTML = '<span class="spinner"></span><span>Searching...</span>';

            // Hide results section
            resultsSection.classList.remove('active');

            try {
                const response = await fetch(`/Scrap/GetAllResult?Category=${encodeURIComponent(category)}&Place=${encodeURIComponent(place)}`);
                
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const data = await response.json();

                // Check if data is an array
                if (Array.isArray(data)) {
                    scrapedData = data;
                    displayResults(data);
                } else if (typeof data === 'string') {
                    // Error message from server
                    showError(data);
                } else {
                    showError('Unexpected response format from server');
                }

            } catch (error) {
                console.error('Error:', error);
                showError('Failed to fetch results. Please try again.');
            } finally {
                // Reset button state
                searchBtn.disabled = false;
                searchBtn.innerHTML = '<i class="fas fa-search"></i><span>Search</span>';
            }
        }

        // Display results in table
        function displayResults(data) {
            resultsBody.innerHTML = '';

            if (!data || data.length === 0) {
                resultsBody.innerHTML = `
                    <tr>
                        <td colspan="7">
                            <div class="empty-state">
                                <i class="fas fa-inbox"></i>
                                <h3>No Results Found</h3>
                                <p>Try searching with different keywords</p>
                            </div>
                        </td>
                    </tr>
                `;
                resultsCount.textContent = '0 results';
                resultsSection.classList.add('active');
                return;
            }

            // Limit to 20 results
            const limitedData = data.slice(0, 20);
            scrapedData = limitedData;

            limitedData.forEach((item, index) => {
                const row = document.createElement('tr');
                row.classList.add('fade-in');
                
                row.innerHTML = `
                    <td>${index + 1}</td>
                    <td class="business-name">${escapeHtml(item.name || 'N/A')}</td>
                    <td>
                        ${item.ratings ? `
                            <div class="rating-badge">
                                <i class="fas fa-star"></i>
                                ${escapeHtml(item.ratings)}
                            </div>
                        ` : '<span class="reviews-count">No rating</span>'}
                    </td>
                    <td class="reviews-count">${escapeHtml(item.numberOfReviews || 'N/A')}</td>
                    <td class="address-text">${escapeHtml(item.address || 'N/A')}</td>
                    <td class="description-text">${escapeHtml(item.description || 'N/A')}</td>
                    <td>
                        ${item.url ? `
                            <a href="${escapeHtml(item.url)}" target="_blank" class="url-link">
                                Visit <i class="fas fa-external-link-alt"></i>
                            </a>
                        ` : '<span class="reviews-count">N/A</span>'}
                    </td>
                `;

                resultsBody.appendChild(row);
            });

            resultsCount.textContent = `${limitedData.length} result${limitedData.length !== 1 ? 's' : ''}`;
            resultsSection.classList.add('active');

            // Scroll to results
            setTimeout(() => {
                resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 100);
        }

        // Download Excel
        downloadBtn.addEventListener('click', () => {
            if (!scrapedData || scrapedData.length === 0) {
                showError('No data to download');
                return;
            }

            try {
                // Prepare data for Excel
                const excelData = scrapedData.map((item, index) => ({
                    '#': index + 1,
                    'Business Name': item.name || 'N/A',
                    'Rating': item.ratings || 'N/A',
                    'Reviews': item.numberOfReviews || 'N/A',
                    'Address': item.address || 'N/A',
                    'Description': item.description || 'N/A',
                    'Website': item.url || 'N/A'
                }));

                // Create workbook and worksheet
                const wb = XLSX.utils.book_new();
                const ws = XLSX.utils.json_to_sheet(excelData);

                // Set column widths
                ws['!cols'] = [
                    { wch: 5 },   // #
                    { wch: 30 },  // Business Name
                    { wch: 10 },  // Rating
                    { wch: 10 },  // Reviews
                    { wch: 40 },  // Address
                    { wch: 50 },  // Description
                    { wch: 40 }   // Website
                ];

                // Add worksheet to workbook
                XLSX.utils.book_append_sheet(wb, ws, 'Results');

                // Generate filename
                const filename = `${currentCategory}_${currentPlace}_${new Date().toISOString().slice(0, 10)}.xlsx`;

                // Download file
                XLSX.writeFile(wb, filename);

                // Show success feedback
                const originalContent = downloadBtn.innerHTML;
                downloadBtn.innerHTML = '<i class="fas fa-check"></i><span>Downloaded!</span>';
                setTimeout(() => {
                    downloadBtn.innerHTML = originalContent;
                }, 2000);

            } catch (error) {
                console.error('Error downloading Excel:', error);
                showError('Failed to download Excel file');
            }
        });

        // Show error message
        function showError(message) {
            errorText.textContent = message;
            errorMessage.classList.add('active');
            
            setTimeout(() => {
                hideError();
            }, 5000);
        }

        // Hide error message
        function hideError() {
            errorMessage.classList.remove('active');
        }

        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Add input animations
        [categoryInput, placeInput].forEach(input => {
            input.addEventListener('focus', (e) => {
                e.target.parentElement.style.transform = 'scale(1.02)';
                e.target.parentElement.style.transition = 'transform 0.3s ease';
            });

            input.addEventListener('blur', (e) => {
                e.target.parentElement.style.transform = 'scale(1)';
            });
        });
    </script>
